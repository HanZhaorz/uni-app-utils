{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums" : true,
    "removeComments": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/*/*"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
